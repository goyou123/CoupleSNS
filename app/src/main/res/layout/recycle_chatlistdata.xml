<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/const1">

    <TextView
        android:id="@+id/ChatListData_Members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="15dp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/ChatListData_LastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마지막 메세지 입니다."
        app:layout_constraintTop_toBottomOf="@id/ChatListData_Members"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="15dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/ChatListData_LastTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ChatListData_Members"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="15dp"
        android:text=""
        />

    <TextView
        android:id="@+id/ChatListData_Count"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text=" "
       app:layout_constraintTop_toBottomOf="@id/ChatListData_LastTime"
        android:textSize="17sp"
        android:layout_margin="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#F60808"
        android:gravity="center"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/ChatListData_LastMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ccc"
        android:layout_marginTop="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
