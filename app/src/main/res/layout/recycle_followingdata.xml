<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/follow_const1"
    android:paddingVertical="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Followingdata_profileimg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Followingdata_Heart"
        android:layout_margin="5dp"
       />
    <TextView
        android:id="@+id/Followingdata_Heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="♥"
        app:layout_constraintTop_toTopOf="@id/Followingdata_profileimg"
        app:layout_constraintLeft_toRightOf="@id/Followingdata_profileimg"
        app:layout_constraintBottom_toBottomOf="@id/Followingdata_profileimg"
        app:layout_constraintRight_toLeftOf="@id/Followingdata_profileimg2"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Followingdata_profileimg2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Followingdata_Heart"

        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/Followingdata_Couplename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/Followingdata_profileimg"
        app:layout_constraintBottom_toBottomOf="@id/Followingdata_profileimg"
       app:layout_constraintLeft_toRightOf="@id/Followingdata_profileimg2"
        android:text="남자 하트 여자"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/Followingdata_RemoveBtn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/Followingdata_profileimg"
        app:layout_constraintBottom_toBottomOf="@id/Followingdata_profileimg"
        app:layout_constraintRight_toRightOf="parent"
        android:text="해제"
        android:textSize="12sp"
        android:background="@drawable/coner_main"
        android:textColor="@color/maincolor"
        android:layout_marginRight="10dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>