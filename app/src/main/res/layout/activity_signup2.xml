<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup2Activity">

    <TextView
        android:id="@+id/Textview_Signup2_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  1  "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Textview_Signup2_num2"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textColor="@color/maincolor"
        android:background="@drawable/coner_main"
        />
    <TextView
        android:id="@+id/Textview_Signup2_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  2  "
        android:textColor="@color/maincolor"
        android:background="@drawable/coner_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Textview_Signup2_num1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Textview_Signup2_Maintext"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        />
<!--    <TextView-->
<!--        android:id="@+id/Textview_Signup2_num3"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="3"-->
<!--        android:textColor="@color/textcolor2"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintLeft_toRightOf="@id/Textview_Signup2_num2"-->
<!--        android:layout_marginTop="50dp"-->
<!--        android:textSize="20sp"-->
<!--        />-->
    <TextView
        android:id="@+id/Textview_Signup2_Maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Textview_Signup2_num2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="상대방의 초대코드를 입력하여 연결해 주세요."
        android:textSize="18sp"
        android:textColor="@color/textcolor"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/Imageview_Sighup2_Refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/refresh"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/Textview_Signup2_mycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 초대코드"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/Textview_Signup2_Maintext"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        />
    
    <TextView
        android:id="@+id/Textview_Signup2_Mycode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00000000"
        app:layout_constraintTop_toBottomOf="@id/Textview_Signup2_mycode"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/lineview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/Textview_Signup2_Mycode"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/Textview_Signup2_Anothercode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상대방 초대코드를 전달받으셨나요?"
        app:layout_constraintTop_toBottomOf="@id/lineview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/Edittext_Signup2_Anothercode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Textview_Signup2_Anothercode"
        android:layout_marginHorizontal="50dp"
        android:hint="전달받은 초대 코드 입력"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/Button_Signup2_Connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Edittext_Signup2_Anothercode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="80dp"
        android:background="@drawable/coner_main_full"
        android:text="연결하기"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/Textview_Signup2_solo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앗, 커플이 아니시라구요?"
        app:layout_constraintTop_toBottomOf="@+id/Button_Signup2_Connect"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"

        />
    <Button
        android:id="@+id/Button_Signup2_Gomain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Textview_Signup2_solo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="80dp"
        android:text="연결없이 앱 둘러보러 가기"
        android:layout_marginTop="5dp"
        android:background="@drawable/coner_sub_full"
        android:textColor="#fff"
        android:textStyle="bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>