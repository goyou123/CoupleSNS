<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCommentActivity">

    <ImageView
        android:id="@+id/Imageview_EditComment_Topline"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/maincolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!--    <ImageView-->
    <!--        android:id="@+id/Imageview_Comment_Back"-->
    <!--        android:layout_width="40dp"-->
    <!--        android:layout_height="40dp"-->
    <!--        android:background="@drawable/back"-->
    <!--        app:layout_constraintTop_toTopOf="Imageview_Comment_Topline"-->
    <!--        app:layout_constraintBottom_toBottomOf="@+id/Imageview_Comment_Topline"-->
    <!--        app:layout_constraintLeft_toLeftOf="+id/Imageview_Comment_Topline"-->
    <!--        android:layout_marginLeft="10dp"-->
    <!--        android:clickable="true"-->
    <!--        />-->

    <TextView
        android:id="@+id/Textview_EditComment_Maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글 수정"
        app:layout_constraintTop_toTopOf="@+id/Imageview_EditComment_Topline"
        app:layout_constraintLeft_toLeftOf="@id/Imageview_EditComment_Topline"
        app:layout_constraintRight_toRightOf="@id/Imageview_EditComment_Topline"
        app:layout_constraintBottom_toBottomOf="@id/Imageview_EditComment_Topline"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Imageview_EditComment_Coupleimg1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/Imageview_EditComment_Topline"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/Edittext_EditComment_Write"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@id/Imageview_EditComment_Coupleimg1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/Imageview_EditComment_Coupleimg1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/Imageview_EditComment_Coupleimg1"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/Button_EditComment_Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/maincolor"
        android:text="업데이트"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Imageview_EditComment_Coupleimg1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/Button_EditComment_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:text="취소"
        android:textColor="@color/maincolor"
        app:layout_constraintRight_toLeftOf="@id/Button_EditComment_Update"
        app:layout_constraintTop_toBottomOf="@id/Imageview_EditComment_Coupleimg1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>