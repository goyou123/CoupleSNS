    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Imageview_Coupleprofile_Myprofile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/Textview_Coupleprofile_Maintext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Textview_Coupleprofile_Date"
        android:layout_marginTop="15dp"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/Textview_Coupleprofile_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사귄날을 \n 선택해주세요"
        app:layout_constraintTop_toBottomOf="@id/Textview_Coupleprofile_Maintext"
        app:layout_constraintLeft_toRightOf="@id/Imageview_Coupleprofile_Myprofile"
        app:layout_constraintRight_toLeftOf="@id/Imageview_Coupleprofile_Anotherprofile"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:gravity="center"
        android:clickable="true"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Imageview_Coupleprofile_Anotherprofile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/Textview_Coupleprofile_Maintext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Textview_Coupleprofile_Date"
        android:layout_marginTop="15dp"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/Textview_Coupleprofile_Myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남자"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Imageview_Coupleprofile_Myprofile"
        app:layout_constraintRight_toRightOf="@id/Imageview_Coupleprofile_Myprofile"
        app:layout_constraintLeft_toLeftOf="@id/Imageview_Coupleprofile_Myprofile"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/Textview_Coupleprofile_Anothername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여자"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Imageview_Coupleprofile_Anotherprofile"
        app:layout_constraintRight_toRightOf="@id/Imageview_Coupleprofile_Anotherprofile"
        app:layout_constraintLeft_toLeftOf="@id/Imageview_Coupleprofile_Anotherprofile"
        android:textColor="#fff"
        />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Imageview_Coupleprofile_Background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/maincolor"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <Button
            android:id="@+id/Button_Coupleprofile_Follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/maincolor"
            android:text="팔로우"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/Button_Coupleprofile_Star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/maincolor"
            android:text="스크랩"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/Button_Coupleprofile_Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/maincolor"
            android:text="갤러리"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/Button_Coupleprofile_Doubledate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/maincolor"
            android:text="받은 더블데이트 신청"
            android:textColor="#fff"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 커플이 쓴 글 볼수있게끔 추가하기"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>