<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoupleprofileActivity"
    android:background="#fff">

    <ImageView
        android:id="@+id/Imageview_Coupleprofile_Background"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/Textview_Coupleprofile_Maintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingVertical="7dp"
        android:text="우리의 커플 피드"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@color/maincolor"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/Imageview_Coupleprofile_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back"
        android:clickable="true"/>
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/Textview_Coupleprofile_Maintext"-->
<!--        android:background="#fff"-->
<!--        android:layout_marginTop="5dp"/>-->
<!--    <ImageView-->
<!--        android:id="@+id/Imageview_Coupleprofile_Setting"-->
<!--        android:layout_width="20dp"-->
<!--        android:layout_height="20dp"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginRight="10dp"-->
<!--        android:background="@drawable/refresh"-->
<!--        android:clickable="true"/>-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Imageview_Coupleprofile_Myprofile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/Textview_Coupleprofile_Maintext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Textview_Coupleprofile_Date"
        android:layout_marginTop="15dp"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/Textview_Coupleprofile_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사귄날을 \n 선택해주세요"
        app:layout_constraintTop_toBottomOf="@id/Textview_Coupleprofile_Maintext"
        app:layout_constraintLeft_toRightOf="@id/Imageview_Coupleprofile_Myprofile"
        app:layout_constraintRight_toLeftOf="@id/Imageview_Coupleprofile_Anotherprofile"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:gravity="center"
        android:clickable="true"
        />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Imageview_Coupleprofile_Anotherprofile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/Textview_Coupleprofile_Maintext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Textview_Coupleprofile_Date"
        android:layout_marginTop="15dp"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/Textview_Coupleprofile_Myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남자"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Imageview_Coupleprofile_Myprofile"
        app:layout_constraintRight_toRightOf="@id/Imageview_Coupleprofile_Myprofile"
        app:layout_constraintLeft_toLeftOf="@id/Imageview_Coupleprofile_Myprofile"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/Textview_Coupleprofile_Anothername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여자"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Imageview_Coupleprofile_Anotherprofile"
        app:layout_constraintRight_toRightOf="@id/Imageview_Coupleprofile_Anotherprofile"
        app:layout_constraintLeft_toLeftOf="@id/Imageview_Coupleprofile_Anotherprofile"
        android:textColor="#000"
        />
    <ImageView
        android:id="@+id/ImageView_Coupleprofile_Edit"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="@id/Textview_Coupleprofile_Myname"
        app:layout_constraintLeft_toRightOf="@id/Textview_Coupleprofile_Myname"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edit"
        />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Imageview_Coupleprofile_Background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:orientation="horizontal"
        android:weightSum="3"
        >
        <Button
            android:id="@+id/Button_Coupleprofile_Follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:text="팔로우"
            android:textColor="@color/maincolor"
            android:textStyle="bold"
           />
<!--        <Button-->
<!--            android:id="@+id/Button_Coupleprofile_Star"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@color/maincolor"-->
<!--            android:text="스크랩"-->
<!--            android:textColor="#fff"-->
<!--            android:textStyle="bold"/>-->
        <Button
            android:id="@+id/Button_Coupleprofile_Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#Fff"
            android:text="갤러리"
            android:textColor="@color/maincolor"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/Button_Coupleprofile_Doubledate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:text="채팅"
            android:textColor="@color/maincolor"
            android:textStyle="bold"

          />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RCV_MyProfile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>