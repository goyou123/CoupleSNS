<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">

    <ImageView
        android:id="@+id/Imageview_Gallery_pinkline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/maincolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />


    <TextView
        android:id="@+id/Textview_mainlogo"
        app:layout_constraintTop_toTopOf="@id/Imageview_Gallery_pinkline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/Imageview_Gallery_pinkline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="갤러리"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/Imageview_Gallery_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/back"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/Imageview_Gallery_pinkline"
        app:layout_constraintBottom_toBottomOf="@id/Imageview_Gallery_pinkline"
        android:layout_marginLeft="15dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RCV_Gallery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Imageview_Gallery_pinkline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>