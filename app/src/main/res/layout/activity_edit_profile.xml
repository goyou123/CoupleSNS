<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ImageView
        android:id="@+id/iv_Edit_pinkline"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/maincolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/tv_mainlogo"
        app:layout_constraintTop_toTopOf="@id/iv_Edit_pinkline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_Edit_pinkline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 수정"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/Imageview_Edit_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/back"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_Edit_pinkline"
        app:layout_constraintBottom_toBottomOf="@id/iv_Edit_pinkline"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/Imageview_Edit_Ok"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/checkck1"
        app:layout_constraintTop_toTopOf="@id/iv_Edit_pinkline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_Edit_pinkline"
        android:layout_marginRight="10dp"
        android:clickable="true"
        />
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Imageview_Editprofile_Img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/iv_Edit_pinkline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/Textview_Editprofile_ChangeImg"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/Textview_Editprofile_ChangeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 사진 변경"
        app:layout_constraintTop_toBottomOf="@id/Imageview_Editprofile_Img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/maincolor"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:clickable="true"
        />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Textview_Editprofile_ChangeImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        >

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/Edittext_EditProfile_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고은찬"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/Edittext_EditProfile_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01050282074"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/Edittext_EditProfile_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/Edittext_EditProfile_Sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="남자"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
